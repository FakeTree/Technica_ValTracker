<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.technica_valtracker.controller.Manage_FriendsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Manage your Friends" />
    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox spacing="10.0">
            <ListView fx:id="contactsListView" />
            <HBox spacing="10.0" />
        </VBox>
        <VBox fx:id="contactContainer" prefWidth="400" spacing="10.0">
            <Label text="Search for your friend" />
            <GridPane hgap="5.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="70" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="firstNameTextField" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#onEditConfirm" text="Add" />
                <Button onAction="#onDelete" text="Delete" />
            </HBox>
        </VBox>
    </HBox>
</VBox>
